<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:scrollbars="none"
    tools:context=".Activity.Main.Fragments.NewProduct.NewProductFragment"
    android:id="@+id/scroll_view"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_type_1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="5dp"
            android:hint="Nhập tên sản phẩm"
            ></EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã vạch/ QR code"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/edittext_type_1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="5dp"
                android:hint="Nhập mã sản phẩm"
                ></EditText>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_type_3"
                    android:layout_gravity="end"
                    android:text="Quét"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    ></Button>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh của sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <ImageView
            android:id="@+id/img_product"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/icon_image"
            android:scaleType="fitXY"
            ></ImageView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <RadioGroup
            android:layout_marginTop="5dp"
            android:id="@+id/rdg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/rd_type_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Bán theo khối lượng (kg)"
                android:checked="true"
                ></RadioButton>
            <RadioButton
                android:id="@+id/rd_type_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Bán theo số lượng (cái/ món)"
                ></RadioButton>
        </RadioGroup>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại tiền tệ"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txt_currency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="VND"
                android:gravity="center"
                android:padding="10dp"
                android:background="#FBEAEA"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/btn_choose_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/button_type_3"
                    android:text="Chọn"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá của sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_type_1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="5dp"
            android:inputType="number"
            android:hint="Nhập giá sản phẩm"
            ></EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng của sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_type_1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="5dp"
            android:inputType="number"
            android:hint="Số lượng"
            android:text="0"
            ></EditText>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thuộc danh mục"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal"
                >
                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    ></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                >
                <Button
                    android:id="@+id/btn_choose_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Chọn"
                    android:textAllCaps="false"
                    android:layout_gravity="end"
                    android:background="@drawable/button_type_3"
                    ></Button>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="@string/cancel"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_type_4"
                    android:padding="10dp"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="@string/submit"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_type_3"
                    android:padding="10dp"
                    ></Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>