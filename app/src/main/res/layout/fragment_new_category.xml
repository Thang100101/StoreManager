<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.Main.Fragments.NewCategory.NewCategoryFragment">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên danh mục"
        android:textColor="@color/black"
        android:textSize="20dp"
        ></TextView>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_type_1"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:padding="5dp"
        android:hint="Nhập tên danh mục"
        ></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/btn_add_product"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_type_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm sản phẩm"
                android:padding="10dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
            ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/btn_submit"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_type_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:padding="10dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                ></Button>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/listview_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

</LinearLayout>