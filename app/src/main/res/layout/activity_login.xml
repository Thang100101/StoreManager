<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    tools:context=".Activity.Login.LoginActivity">
    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/img_logo"
        android:src="@drawable/logo_unbg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        ></ImageView>
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        >
        <ImageView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:scaleType="centerInside"
            android:src="@drawable/google_icon"
            ></ImageView>
        <Button
            android:id="@+id/btn_signin_google"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:background="@drawable/button_type_2"
            android:text="@string/signin_google"
            android:textSize="18dp"
            android:textColor="@color/white"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        >
        <ImageView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:scaleType="centerInside"
            android:src="@drawable/facebook_icon"
            ></ImageView>
        <Button
            android:id="@+id/btn_signin_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:background="@drawable/button_type_2"
            android:text="@string/signin_facebook"
            android:textSize="18dp"
            android:textColor="@color/white"
            ></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        >
        <ImageView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_local_store"

            ></ImageView>
        <Button
            android:id="@+id/btn_access"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:background="@drawable/button_type_2"
            android:text="Access without sign in"
            android:textSize="18dp"
            android:textColor="@color/white"
            ></Button>
    </LinearLayout>


</LinearLayout>